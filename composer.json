{
  "name": "akrzemianowski/currencyrate",
  "description": "PrestaShop module for currency rate management",
  "type": "prestashop-module",
  "license": "AFL-3.0",
  "authors": [
    {
      "name": "Adam Krzemianowski",
      "email": "adam.krzemianowski@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^1.0 || ^2.0"
  },
  "require-dev": {
    "symfony/http-client": "^6.0 || ^7.0"
  },
  "autoload": {
    "psr-4": {
      "CurrencyRate\\": "src/"
    },
    "classmap": [
      "currencyrate.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "classmap-authoritative": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
